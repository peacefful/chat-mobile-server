generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	surname String
	name String
	appointment String
	rank String
	login String
	password String
	phone String
	role String
	@@map("users")
}

model Message {
  id Int @id @default(autoincrement())
  room String
  sender String
  message String
  time String
  @@map("messages")
}