generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	username String
	password String
	@@map("users")
}

model Message {
  id        Int       @id @default(autoincrement())
  room      String
  sender    String
  text      String
  timestamp DateTime  @default(now())
  @@map("messages")
}